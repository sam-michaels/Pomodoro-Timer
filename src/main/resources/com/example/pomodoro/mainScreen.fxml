<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pomodoro.MainScreenController">
   <children>
      <ImageView fx:id="ImageBackground" fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true" />
      <Button fx:id="startTimer" layoutX="77.0" layoutY="263.0" mnemonicParsing="false" onAction="#startTimer" prefHeight="46.0" prefWidth="134.0" text="Start">
         <font>
            <Font name="Arial Bold" size="25.0" />
         </font>
      </Button>
      <Button layoutX="233.0" layoutY="263.0" mnemonicParsing="false" onAction="#restartTimer" prefHeight="46.0" prefWidth="134.0" text="Restart">
         <font>
            <Font name="Arial Bold" size="25.0" />
         </font>
      </Button>
      <Button layoutX="398.0" layoutY="263.0" mnemonicParsing="false" onAction="#openSettings" prefHeight="46.0" prefWidth="134.0" text="Settings">
         <font>
            <Font name="Arial Bold" size="25.0" />
         </font>
      </Button>
      <Label fx:id="timer" alignment="CENTER" layoutX="175.0" layoutY="156.0" prefHeight="88.0" prefWidth="250.0" textAlignment="CENTER">
         <font>
            <Font name="Arial Bold" size="50.0" />
         </font></Label>
      <Button layoutX="33.0" layoutY="87.0" mnemonicParsing="false" onAction="#setPomoTimer" text="Pomodoro">
         <font>
            <Font name="Arial Bold" size="25.0" />
         </font>
      </Button>
      <Button layoutX="212.0" layoutY="87.0" mnemonicParsing="false" onAction="#setSmBreakTimer" text="Short Break">
         <font>
            <Font name="Arial Bold" size="25.0" />
         </font>
      </Button>
      <Button layoutX="408.0" layoutY="87.0" mnemonicParsing="false" onAction="#setLgBreakTimer" text="Long Break">
         <font>
            <Font name="Arial Bold" size="25.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
